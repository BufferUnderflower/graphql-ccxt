{
  "name": "graphql-ccxt",
  "version": "0.1.0",
  "description": "wake up bears 🐻 ride bulls 🐂",
  "main": "src/graphql-ccxt.js",
  "scripts": {
    "ava": "NODE_PATH=src ava",
    "example_server": "NODE_PATH=src node $npm_package_config_example_server",
    "lint-staged": "lint-staged",
    "markdown2code": "markdown2code -l javascript README.md > $npm_package_config_example_server",
    "postversion": "git push origin v${npm_package_version}; npm publish",
    "postpublish": "git commit -am ':arrow_up: updated version'; git push origin main",
    "start": "npm run example_server",
    "test": "npm run ava"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/fibo/graphql-ccxt.git"
  },
  "config": {
    "example_server": "examples/server.js"
  },
  "keywords": [
    "graphql",
    "trading",
    "trade",
    "crypto",
    "ccxt",
    "bitcoin",
    "ethereum",
    "btc",
    "eth",
    "query"
  ],
  "author": {
    "name": "Gianluca Casati",
    "url": "http://g14n.info"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/fibo/graphql-ccxt/issues"
  },
  "homepage": "http://g14n.info/graphql-ccxt",
  "dependencies": {
    "read-file-utf8": "^2.0.4"
  },
  "peerDependencies": {
    "ccxt": ">= 1.x",
    "graphql": ">= 15.x"
  },
  "devDependencies": {
    "ava": "^3.15.0",
    "ccxt": "^1.44.5",
    "express": "^4.17.1",
    "express-graphql": "^0.12.0",
    "graphql": "^15.5.0",
    "lint-staged": "^10.5.4",
    "markdown2code": "^1.0.2",
    "pre-commit": "^1.2.2",
    "prettier": "^2.2.1",
    "standa": "^16.1.0"
  },
  "lint-staged": {
    "*.{graphql,json,md}": "prettier --write",
    "**/*.js": [
      "prettier --write",
      "standa --fix"
    ]
  },
  "pre-commit": [
    "lint-staged",
    "test"
  ],
  "prettier": {
    "arrowParens": "always",
    "bracketSpacing": true,
    "semi": false,
    "singleQuote": true,
    "trailingComma": "none"
  }
}
